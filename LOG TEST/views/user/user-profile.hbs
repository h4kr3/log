<section class="container" style="margin-top:150px;">
  <div class="line-bg d-flex justify-content-center mt-5">
    <img src="/images/line1.png" alt="" />
  </div>
</section>

<section class="container d-flex justify-content-center align-items-center main1-3 text-center"
  style="margin-top:50px;">

  <form action="" method="post" class="pt-3" id="addProfileDetails">
    <div class="d-flex justify-content-center align-items-center main1-3">
      <span class="span1">YOUR</span>
      <span class="span2">PERSONAL INFO</span>
    </div>
    <div class="form-group">
      <input type="hidden" class="form-control" value="{{user._id}}" name="userId" id="contact-name"
        onkeyup="validateName()" />
      <span id="valid-error" class="text-white"></span>
    </div>
    <div class="form-group">
      <label for="name" class="mt-3">FULL NAME</label>
      <input type="name" class="form-control" value="{{user.name}}" name="name" id="contact-name"
        onkeyup="validateName()" />
      <span id="valid-error" class="text-white"></span>
    </div>
    <div class="form-group">
      <label for="name" class="mt-3">MOBILE NUMBER</label>
      <input type="phone" class="form-control " value="{{user.phone}}" name="phone" id="contact-phone"
        onkeyup="validatePhone()" />
      <span id="phone-error" class="text-white"></span>
    </div>
    <div class="form-group">
      <label for="name" class="mt-3">EMAIL</label>
      <input type="email" class="form-control " value="{{user.email}}" name="email" id="contact-email"
        onkeyup="validateEmail()" />
      <span id="email-error" class="text-white"></span>
    </div>
    <div class="form-group">
      <label for="name" class="mt-3">ADDRESS</label>
      <input type="text" class="form-control " value="{{user.address.[0].address}}" name="address" id="contact-email"
        onkeyup="validateEmail()" />
      <span id="email-error" class="text-white"></span>
    </div>
    <div class="form-group">
      <label for="name" class="mt-3">COUNTRY</label>
      <input type="text" class="form-control " value="{{user.address.[0].country}}" name="country" id="contact-email"
        onkeyup="validateEmail()" />
      <span id="email-error" class="text-white"></span>
    </div>
    <div class="form-group">
      <label for="name" class="mt-3">STATE</label>
      <input type="text" class="form-control " value="{{user.address.[0].state}}" name="state" id="contact-email"
        onkeyup="validateEmail()" />
      <span id="email-error" class="text-white"></span>
    </div>
    <div class="form-group">
      <label for="name" class="mt-3">PINCODE</label>
      <input type="number" class="form-control " value="{{user.address.[0].pincode}}" name="pincode" id="contact-email"
        onkeyup="validateEmail()" />
      <span id="email-error" class="text-white"></span>
    </div>

    <span id="submit-error" class="text-white mt-3"></span>
    <button type="submit" class="btn mt-3 save-info" onclick="return validateForm()">SAVE INFO</button><br>
  </form>
</section>

<section class="container" style="margin-top:150px;">
  <div class="line-bg d-flex justify-content-center mt-5">
    <img src="/images/line1.png" alt="" />
  </div>
</section>

<div style="height:300px;"></div>


<section class="container">
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
        aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <h1 class="text-center" style="font-weight:800;font-size:30px">WALLET BALANCE</h1>
                    <h1 class="text-center mt-3" style="font-weight:800;font-size:20px">BALANCE : RS {{user.wallet}}</h1>
                    <h1 class="text-center mt-3" style="font-weight:800;font-size:16px">LAST UPDATE : {{user.walletUpdate}}</h1>
                    
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-warning text-center" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</section>
